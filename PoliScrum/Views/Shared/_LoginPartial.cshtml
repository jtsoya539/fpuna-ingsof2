@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span class="fas fa-user-edit"></span>&nbsp;@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><span class="fas fa-sign-out-alt"></span>&nbsp;Cerrar Sesión</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register"><span class="fas fa-user-plus"></span>&nbsp;Registrarse</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login"><span class="fas fa-sign-in-alt"></span>&nbsp;Iniciar Sesión</a></li>
    </ul>
}