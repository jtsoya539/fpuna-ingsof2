@model PoliScrum.Models.Proyecto

@{
    ViewData["Title"] = "Product Backlog";
}

<main role="main">

    <h2>Product Backlog</h2>
    <hr />

    <div class="container-fluid">
       <div class="row">

            @foreach (var item in Model.ProductBacklog) {
                <div class="col-sm-4">
                    <div class="card shadow" style="width: 30rem; height: 20rem; margin: 5px; padding: 10px; background-color: #cddffd; border: 2px solid #3b598d; border-radius: 15px;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Titulo</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.OrdenPrioridad</h6>
                            <p class="card-text">@item.Descripcion</p>
                            <div class="btn-group">
                                <a asp-controller="UserStory" asp-action="Details" asp-route-id="@item.UserStoryId"><button type="button" class="btn btn-sm btn-outline-secondary">Details</button></a>
                                <a asp-controller="UserStory" asp-action="Edit" asp-route-id="@item.UserStoryId"><button type="button" class="btn btn-sm btn-outline-secondary">Edit</button></a>
                            </div>
                        </div>     
                    </div>
                </div>
            }

        </div>
    </div>

</main>