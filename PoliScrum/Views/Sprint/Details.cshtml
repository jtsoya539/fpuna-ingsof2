@model PoliScrum.Models.Sprint

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Sprint</h4>
    <hr />
    <a asp-controller="Dashboard" asp-action="SprintBacklog" asp-route-id="@Model.SprintId"><button type="button" class="btn btn-sm">Dashboard</button></a>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaFinEstimada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaFinEstimada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DuracionEstimada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DuracionEstimada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>

    <h5>Sprint Backlog</h5>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>TÃ­tulo</th>
                    <th>Prioridad</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SprintBacklog) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserStoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrdenPrioridad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFin)
                        </td>
                        <td>
                            <a asp-controller="UserStory" asp-action="Edit" asp-route-id="@item.UserStoryId"><span class="fas fa-edit"></span></a> |
                            <a asp-controller="UserStory" asp-action="Details" asp-route-id="@item.UserStoryId"><span class="fas fa-file-alt"></span></a> |
                            <a asp-controller="UserStory" asp-action="Delete" asp-route-id="@item.UserStoryId"><span class="fas fa-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SprintId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
