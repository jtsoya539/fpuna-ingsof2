@model IEnumerable<PoliScrum.Models.Sprint>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinEstimada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracionEstimada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinEstimada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracionEstimada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SprintId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SprintId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SprintId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
