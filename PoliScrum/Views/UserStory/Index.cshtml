@model IEnumerable<PoliScrum.Models.UserStory>

@{
    ViewData["Title"] = "User Stories";
}

<h2>User Stories</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CriteriosAceptacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenPrioridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracionEstimada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CriteriosAceptacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrdenPrioridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracionEstimada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserStoryId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UserStoryId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.UserStoryId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
